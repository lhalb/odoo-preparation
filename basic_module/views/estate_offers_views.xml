<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tree_offers_view_form" model="ir.ui.view">
        <field name="name">re.properties.offers.form</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <button name="accept_offer" type="object" icon="fa-check" attrs="{'invisible': [('status','!=','dp')]}"/>
                    <button name="refuse_offer" type="object" icon="fa-remove" attrs="{'invisible': [('status','!=','dp')]}"/>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="valid_duration"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tree_property_offers_view" model="ir.ui.view">
        <field name="name">re.properties.offers.tree</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <tree string="Offers" editable="bottom" decoration-success="status=='accepted'" decoration-warning="status=='refused'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="valid_duration"/>
                <field name="date_deadline"/>
                <button name="accept_offer" type="object" icon="fa-check" attrs="{'invisible': [('status','!=','dp')]}"/>
                <button name="refuse_offer" type="object" icon="fa-remove" attrs="{'invisible': [('status','!=','dp')]}"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>
</odoo>