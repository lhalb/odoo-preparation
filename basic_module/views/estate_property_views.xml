<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tree_advertisement_view_form" model="ir.ui.view">
        <field name="name">re.properties.form</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <button name="action_mark_as_sold" type="object" string="Mark as Sold" class="oe_highlight" states="a"/>
                    <button name="action_cancel_ad" type="object" string="Cancel Ad" states="a,n,r"/>
                    <button name="action_mark_as_new" type="object" string="Mark as New" states="c"/>
                    <field name="state" widget="statusbar" statusbar_visible="n,r,a,s"/>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="show_best_price" type="object" class="oe_stat_button" icon="fa-euro">
                            <field string="Offer" name="best_price" widget="statinfo">
                                <span>Text drunter</span>
                            </field>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" string="Active">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field nolabel="1" name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="categ_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="property_type_id" widget="many2one" options="{'no_create': True}"/>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
<!--                            <field name="state"/>-->
                            <field name="expected_price"/>
                            <field name="selling_price"/>
<!--                            <field name="best_price"/>-->
                        </group>
                    </group>
                    <group>
                        <field name="date_created"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="total_area" string="Total Area [sqft]"/>
                                <group string="Indoor">
                                    <field name="living_area"/>
                                    <field name="bedrooms"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                </group>
                                <group string="Outdoor">
                                    <field name="garden" invisible="0"/>
                                    <field name="garden_area" attrs="{'invisible': [('garden','=',False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden','=',False)]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                                <field name="offer_ids" attrs="{'readonly': [('state','in',['a','s','c'])]}"/>
                        </page>
                        <page string="Additional info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tree_advertisements_view" model="ir.ui.view">
        <field name="name">re.properties.tree</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-success="state=='r' or state=='a'" decoration-muted="state=='s'" decoration-bf="state=='a'">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="categ_ids" widget="many2many_tags" options="{'no_create': True, 'color_field': 'color'}"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_test_model" model="ir.actions.act_window">
        <field name="name">All Advertisements</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">test.model</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'search_default_check_availability': 1
        }
        </field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new Advertisement
          </p><p>
            Odoo helps you get the best out of your estate.
          </p>
        </field>
    </record>

    <menuitem id="menu_properties"
              name="Properties"
              action="action_test_model"
              parent="menu_properties_master"/>

    <record id="tree_advertisement_view_filters" model="ir.ui.view">
        <field name="name">re.properties.filters</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="property_type_id"/>
                <field name="state"/>
                <field name="living_area" string="Living area (sqft)"
                    filter_domain="[('living_area','>=',self)]"/>
                <field name="facades"/>
                <field name="bedrooms"/>
                <separator/>
                <filter name="filter_available_date" date="date_created"
                        string="Creation Date" default_period="this_month"/>
                <filter string="Available Ads" name="check_availability"
                        domain="[('state', 'not in', ['s', 'c'])]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>

    </record>

</odoo>